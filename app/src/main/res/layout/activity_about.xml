<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".AboutActivity">

    <TextView
        android:text="@string/app_banner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/std_text_size"
        android:textColor="@color/deepblue"
        android:id="@+id/app_banner"
        android:layout_margin="@dimen/std_text_margin"/>

    <TextView
        android:text="@string/version_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/std_text_size"
        android:textColor="@color/deepblue"
        android:id="@+id/version_number"
        android:layout_below="@+id/app_banner"
        android:layout_marginTop="@dimen/geek_info_space_margin"
        android:layout_marginLeft="@dimen/std_text_margin"/>

    <TextView
        android:text="@string/version_build"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/std_text_size"
        android:textColor="@color/deepblue"
        android:id="@+id/version_build"
        android:layout_below="@+id/version_number"
        android:layout_marginLeft="@dimen/std_text_margin"
        android:layout_marginTop="0dp"/>

    <TextView
        android:text="@string/version_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/std_text_size"
        android:textColor="@color/deepblue"
        android:id="@+id/version_date"
        android:layout_below="@+id/version_build"
        android:layout_marginLeft="@dimen/std_text_margin"
        android:layout_marginTop="0dp"/>

    <TextView
        android:text="@string/credits_copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/std_text_size"
        android:textColor="@color/deepblue"
        android:id="@+id/credits_copyright"
        android:layout_below="@+id/version_date"
        android:layout_marginLeft="@dimen/std_text_margin"
        android:layout_marginTop="@dimen/geek_info_space_margin"/>

</RelativeLayout>
